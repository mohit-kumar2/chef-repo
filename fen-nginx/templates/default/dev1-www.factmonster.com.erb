######################## dev1-www.factmonster.com ##################
server {
        listen 443 ssl;
        server_name dev1-www.factmonster.com;
        server_name *.factmonster.com;
        ssl_certificate /etc/ssl/certs/star.factmonster.com.crt;
        ssl_certificate_key /etc/ssl/private/star.factmonster.com.key;

        location / {
            proxy_pass http://127.0.0.1:80;
            proxy_set_header X-Real-IP  $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header Host $host;
        }
}
